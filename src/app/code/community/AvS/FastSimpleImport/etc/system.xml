    <sections>
        <fastsimpleimport translate="label" module="fastsimpleimport">
            <class>separator-top</class>
            <label>Default Values</label>
            <tab>fastsimpleimport</tab>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <product>
                    <label>Product</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <attribute_set translate="label comment">
                            <label>Attribute Set</label>
                            <frontend_type>select</frontend_type>
                            <source_model>fastsimpleimport/system_config_source_product_attributeset</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </attribute_set>
                        <websites translate="label comment">
                            <label>Websites</label>
                            <frontend_type>select</frontend_type>
                            <source_model>fastsimpleimport/system_config_source_product_website</source_model>
